generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String          @id @default(cuid())
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
  email             String?         @unique
  image             String?
  name              String?
  providerAccountId String?         @unique
  conversations     Conversation[]
  profile           UserProfile?
  watchlist         WatchlistItem[]
}

model Conversation {
  id               String    @id @default(cuid())
  userId           String
  title            String?
  summary          String?
  lastMessageAt    DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  summaryUpdatedAt DateTime?
  user             User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages         Message[]

  @@index([userId, createdAt])
  @@index([userId, lastMessageAt])
}

model Message {
  id             String       @id @default(cuid())
  conversationId String
  role           Role
  text           String
  toolName       String?
  toolCallId     String?
  toolArgsJson   Json?
  toolResultJson Json?
  createdAt      DateTime     @default(now())
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId, createdAt])
  @@index([conversationId, role, createdAt])
  @@index([toolCallId])
}

model UserProfile {
  id            String     @id @default(cuid())
  userId        String     @unique
  riskTolerance Risk       @default(medium)
  horizon       Horizon    @default(long)
  sectors       String?
  constraints   String?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  briefStyle    BriefStyle @default(bullet)
  experience    Experience @default(intermediate)
  user          User       @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model WatchlistItem {
  id        String   @id @default(cuid())
  userId    String
  ticker    String
  reason    String?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, ticker])
  @@index([userId, createdAt])
}

model PendingConfirmation {
  id             String   @id @default(cuid())
  conversationId String
  toolName       String
  ticker         String
  args           Json
  userId         String
  expiresAt      DateTime

  @@index([conversationId, toolName, ticker])
  @@unique([conversationId, toolName, ticker], name: "conversationId_toolName_ticker")
}

enum Role {
  user
  assistant
  tool
}

enum Risk {
  low
  medium
  high
}

enum Horizon {
  day
  swing
  long
}

enum BriefStyle {
  bullet
  narrative
  numbers_first
}

enum Experience {
  beginner
  intermediate
  advanced
}
