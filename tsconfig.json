{
  "compilerOptions": {
    /* Language & Output */
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,

    /* Type Safety */
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,

    /* Modules (IMPORTANT PAIR) */
    "module": "Node16",
    "moduleResolution": "Node16",

    /* Interop */
    "resolveJsonModule": true,
    "esModuleInterop": true,

    /* JSX / React */
    "jsx": "react-jsx",

    /* Incremental */
    "incremental": true,

    /* Next.js plugin */
    "plugins": [
      {
        "name": "next"
      }
    ],

    /* Path aliases */
    "paths": {
      "@/*": ["./src/*"]
    }
  },

  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],

  "exclude": ["node_modules"]
}
